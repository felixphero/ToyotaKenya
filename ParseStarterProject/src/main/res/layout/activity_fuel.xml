<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_800"
    tools:context="com.parse.motors.com.phero.starter.fuel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fuel"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/colorAccent"
                android:textSize="13.5sp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:letterSpacing="0.3"
                android:textStyle="bold"
                android:text="@string/my_fuel_records"
                android:background="@color/material_grey_200"
                android:gravity="center"/>
            <TextView
                android:id="@+id/request"
                android:fontFamily="@font/roboto_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_fuel_record"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="#4Dffffff"
                android:layout_marginTop="15dp"/>
            <TextView

                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingTop="40dp"
                android:id="@+id/existing"
                android:text="0.0"
                android:textStyle="bold"
                android:textSize="55sp"
                android:gravity="center"
                android:background="@drawable/cerclebackgroundgreen"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/carId"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#00000000"
                android:hint="@string/fuel_car_registeration_number"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#E6ffffff" />

            <EditText
                android:id="@+id/newfuel"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#00000000"
                android:hint="@string/new_fuel_record"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#E6ffffff" />

            <EditText
                android:id="@+id/amount"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#00000000"
                android:hint="@string/fuel_total_cost"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#E6ffffff" />
            <EditText
                android:id="@+id/oddreading"
                android:fontFamily="@font/open_sans_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#00000000"
                android:hint="@string/fuel_odometer_reading"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#E6ffffff" />

            <Button
                android:id="@+id/signup"
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:textColor="#CCffffff"
                android:textSize="13.4sp"
                android:layout_marginTop="35dp"
                android:padding="15dp"
                android:letterSpacing="0.3"
                android:text="@string/signup_update"
                android:onClick="updating"
                android:background="@drawable/rect_white"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>